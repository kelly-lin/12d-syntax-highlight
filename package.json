{
    "name": "12d-syntax-highlight",
    "publisher": "KellyLin",
    "displayName": "12d Syntax Highlight",
    "description": "Provides syntax highlighting for the 12d programming language",
    "repository": {
        "url": "https://github.com/kelly-lin/12d-syntax-highlight"
    },
    "version": "0.0.2",
    "engines": {
        "vscode": "^1.43.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "12dpl",
                "aliases": [
                    "4dpl"
                ],
                "extensions": [
                    ".4dm .h"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "12dpl",
                "scopeName": "source.12dpl",
                "path": "./syntaxes/12dpl.tmLanguage.json"
            }
        ]
    },
    "devDependencies": {
        "js-yaml": "^3.13.1"
    }
}
